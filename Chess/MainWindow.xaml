<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:views="clr-namespace:Chess.Views"
        mc:Ignorable="d"
        Title="Chess" 
        Height="975" Width="1050" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        WindowStyle="ToolWindow">
     <Grid Background="#1B2430">
          <views:MainBoard Grid.Row="0" />
          <Label Content="{Binding Path=Debug}" Foreground="White" FontSize="20" Grid.Row="1"/>
          <Button Content="Debug" Grid.Row="2" Click="Button_Click"/>
          <TextBox Name="TextInput" Grid.Row="2" Grid.Column="1" />
          <views:DebugMenu Grid.Row="0" Grid.Column="1"/>
          <Grid.RowDefinitions>
               <RowDefinition x:Name="BoardRow" Height="825"/>
               <RowDefinition Height="50"/>
               <RowDefinition />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
               <ColumnDefinition Width="825"/>
               <ColumnDefinition Width="200"/>
          </Grid.ColumnDefinitions>
     </Grid>
</Window>